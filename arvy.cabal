license:             GPL-3.0-only
license-file:        LICENSE
author:              Silvan Mosberger
maintainer:          infinisil@icloud.com
-- copyright:
category:            Network
extra-source-files:  CHANGELOG.md

library
  exposed-modules:     Arvy
                       Arvy.Weights
                       Arvy.Tree
                       Arvy.Algorithm
                       Arvy.Algorithm.Arrow
                       Arvy.Algorithm.Ivy
                       Arvy.Algorithm.ConstantRing
                       Arvy.Algorithm.Half
                       Arvy.Requests
                       Arvy.Utils
  -- TODO: Enable -fplugin=Polysemy.Plugin to be able to remove a lot of type applications
  -- once HIE is updated with https://github.com/alanz/ghc-mod/pull/20
  ghc-options:         -Wall -O2 -flate-specialise -fspecialise-aggressively
  build-depends:       base ^>=4.12.0.0
                     , polysemy
                     , polysemy-plugin
                     , polysemy-zoo
                     , array
                     , containers
                     , algebraic-graphs
                     , heaps
                     , random
                     , time
                     , template-haskell
                     , deepseq
  default-extensions:  DataKinds
                     , FlexibleContexts
                     , GADTs
                     , LambdaCase
                     , PolyKinds
                     , RankNTypes
                     , ScopedTypeVariables
                     , TypeApplications
                     , TypeOperators
                     , TypeFamilies
                     , LambdaCase
                     , QuantifiedConstraints
                     , AllowAmbiguousTypes
                     , RecordWildCards
                     , NamedFieldPuns
                     , TupleSections
  hs-source-dirs:      lib
  default-language:    Haskell2010


test-suite arvy-tests
  type:                exitcode-stdio-1.0
  main-is:             Main.hs
  hs-source-dirs:      tests
  ghc-options:         -Wall
  build-depends:       base ^>=4.12.0.0
                     , arvy
                     , hspec
                     , array
                     , polysemy
                     , polysemy-zoo
                     , random
                     , containers
                     , deepseq
  default-language:    Haskell2010

  
executable arvy-eval
  hs-source-dirs:      eval
  other-modules:       Parameters
                     , ParametersLibrary
  main-is:             Main.hs
  ghc-options:         -Wall
  build-depends:       base ^>=4.12.0.0
                     , arvy
                     , array
                     , polysemy
                     , polysemy-zoo
                     , algebraic-graphs
                     , time
                     , random
  default-language:    Haskell2010
  default-extensions:  DataKinds
